generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}

model categories {
   c_id   Int    @id @default(autoincrement())
   c_name String
}

model ingredients {
   i_id   Int    @id @default(autoincrement())
   i_name String
}

