{
	"compilerOptions": {
		"target": "ES6",
		"useDefineForClassFields": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"noImplicitThis": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/db.mjs", "src/db.mjs", "src/db.config.js"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
